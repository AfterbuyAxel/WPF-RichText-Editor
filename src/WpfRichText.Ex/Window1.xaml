<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:Controls="clr-namespace:WpfRichText;assembly=WpfRichText" 
		x:Class="WpfRichText.Window1"
        Title="Window1" Height="313" Width="619">
	<Grid>
		<StackPanel>
			<Label Content="WPF RichText Editor" FontWeight="Bold" FontSize="15" Margin="5"/>
			<Controls:RichTextEditor Name="sampleEditor" Text="{Binding Text, Mode=TwoWay}" MaxHeight="200">
				<Controls:RichTextEditor.Resources>
					<Style TargetType="{x:Type ToolBar}">
						<Setter Property="Visibility" Value="Visible" />
					</Style>
				</Controls:RichTextEditor.Resources>
			</Controls:RichTextEditor>
			<Button Content="Get XAML" Margin="5" Height="30" 
                    Command="{Binding GetXamlCommand}"/>
		</StackPanel>

	</Grid>
</Window>
