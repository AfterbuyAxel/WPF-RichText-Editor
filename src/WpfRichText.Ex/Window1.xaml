<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:Controls="clr-namespace:WpfRichText;assembly=WpfRichText" 
		xmlns:System="clr-namespace:System;assembly=mscorlib" 
		x:Class="WpfRichText.Window1"
        Title="Window1" Height="313" Width="619">
	<Grid>
		<StackPanel>
			<Label Content="WPF RichText Editor" FontWeight="Bold" FontSize="15" Margin="5"/>
			<Controls:RichTextEditor x:Name="sampleEditor" Text="{Binding Text, Mode=TwoWay}" IsContextMenuEnabled="True" IsToolBarVisible="True" MaxHeight="200" />
			<Button Content="Get XAML" Margin="5" Height="30" 
				Command="{Binding GetXamlCommand}"/>
			<Button Content="Load Html" Margin="5" Height="30" 
				Command="{Binding LoadHtmlCommand}"/>
		</StackPanel>

	</Grid>
</Window>
